<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/hotel"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HotelActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:padding="16dp">

        <LinearLayout
            android:id="@+id/hotel_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Trip Title -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Book Your Hotel"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_marginBottom="24dp"/>

            <!-- Image Section -->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="24dp"
                android:contentDescription="@string/hotel_image"
                android:src="@drawable/hotel_image_edited"
                android:scaleType="centerCrop"
                android:background="@drawable/hotel_image_edited"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"/>

            <!-- Hotel Selection Title -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/select_hotel"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/red"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Travel Trove Grants the best price in the market"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="16dp"/>

            <!-- RadioGroup for Hotel Selection -->
            <RadioGroup
                android:id="@+id/rg_hotel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="24dp">

                <!-- Hotel 1 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/hotel1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hotel La Comtesse"
                        android:textSize="18sp"
                        android:textColor="@color/black"/>
                    <TextView
                        android:id="@+id/price1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$200 per night"
                        android:textSize="14sp"
                        android:textColor="@color/green"
                        android:layout_marginStart="24dp"
                        android:layout_marginBottom="16dp"/>
                </LinearLayout>

                <!-- Hotel 2 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/hotel2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hotel Ritz"
                        android:textSize="18sp"
                        android:textColor="@color/black"/>
                    <TextView
                        android:id="@+id/price2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$250 per night"
                        android:textSize="14sp"
                        android:textColor="@color/green"
                        android:layout_marginStart="24dp"
                        android:layout_marginBottom="16dp"/>
                </LinearLayout>

                <!-- Hotel 3 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/hotel3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Grand Hotel Central"
                        android:textSize="18sp"
                        android:textColor="@color/black"/>
                    <TextView
                        android:id="@+id/price3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$180 per night"
                        android:textSize="14sp"
                        android:textColor="@color/green"
                        android:layout_marginStart="24dp"
                        android:layout_marginBottom="16dp"/>
                </LinearLayout>

                <!-- Hotel 4 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/hotel4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="The Plaza"
                        android:textSize="18sp"
                        android:textColor="@color/black"/>
                    <TextView
                        android:id="@+id/price4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$300 per night"
                        android:textSize="14sp"
                        android:textColor="@color/green"
                        android:layout_marginStart="24dp"
                        android:layout_marginBottom="16dp"/>
                </LinearLayout>

                <!-- Hotel 5 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/hotel5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hotel California"
                        android:textSize="18sp"
                        android:textColor="@color/black"/>
                    <TextView
                        android:id="@+id/price5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$150 per night"
                        android:textSize="14sp"
                        android:textColor="@color/green"
                        android:layout_marginStart="24dp"
                        android:layout_marginBottom="24dp"/>
                </LinearLayout>

            </RadioGroup>

            <!-- Next Button -->
            <Button
                android:id="@+id/next_btn_hotel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Next"
                android:backgroundTint="@color/black"
                android:textColor="@color/white"
                android:padding="12dp"
                android:textSize="18sp"/>

            <!-- Cancel Button -->
            <Button
                android:id="@+id/cancel_btn_hotel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/cancel"
                android:backgroundTint="@color/black"
                android:textColor="@color/white"
                android:padding="12dp"
                android:layout_marginTop="20dp"
                android:textSize="18sp"/>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>

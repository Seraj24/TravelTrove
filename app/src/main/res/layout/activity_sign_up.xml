<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/sign_up"
    android:background="@drawable/home_airplane_background">

    <!-- Travel Trove App Icon -->
    <ImageView
        android:id="@+id/travel_trove_icon_sign_up"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:contentDescription="@string/travel_trove_logo_content_description"
        android:src="@drawable/travel_trove_no_background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0" />

    <!-- Email EditText -->
    <EditText
        android:id="@+id/editTextEmail"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:maxLines="1"
        android:hint="Email"
        android:textColorHint="@color/black"
        app:layout_constraintTop_toBottomOf="@id/travel_trove_icon_sign_up"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"
        android:layout_marginHorizontal="16dp" />

    <!-- First Name EditText -->
    <EditText
        android:id="@+id/editTextFN"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:maxLines="1"
        android:hint="First name"
        android:textColorHint="@color/black"
        app:layout_constraintTop_toBottomOf="@id/editTextEmail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp" />

    <!-- Last Name EditText -->
    <EditText
        android:id="@+id/editTextLN"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:maxLines="1"
        android:hint="Last name"
        android:textColorHint="@color/black"
        app:layout_constraintTop_toBottomOf="@id/editTextFN"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp" />

    <!-- Password EditText -->
    <EditText
        android:id="@+id/editTextPassword"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:hint="Password"
        android:maxLines="1"
        android:textColorHint="@color/black"
        app:layout_constraintTop_toBottomOf="@id/editTextLN"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp" />


    <!-- Sign Up Button -->
    <Button
        android:id="@+id/btn_sign_up"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:backgroundTint="@color/black"
        android:textColor="@color/white"
        android:padding="12dp"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/editTextPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginHorizontal="16dp"/>

    <!-- Sign In TextView -->
    <TextView
        android:id="@+id/textViewSignIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Already have an account? Sign In"
        app:layout_constraintTop_toBottomOf="@id/btn_sign_up"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:textColor="@android:color/holo_blue_dark"
        android:clickable="true" />

</androidx.constraintlayout.widget.ConstraintLayout>
